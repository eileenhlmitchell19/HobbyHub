<div id="profilePage" class="row">
  <div id="yourProfile" class="col">

    <div class="col mb-4">
      <div class="col-auto">
        <div id="titleCard">{{username}}'s New Hobby</div>
      </div>
    </div>

    <div id="newHobbyCard" class="col">
      <div class="card mb-3">

        <h3 id="createHobbyHeader" class="card-header">Create a New Hobby:</h3>

        <form class="form new-hobby-form card-body">
          <div class="form-group">
            <label for="hobby-name">Hobby name:</label>
            <input
              class="form-input"
              type="text"
              id="hobby-name"
              name="hobby-name"
            />
          </div>
          <div class="form-group">
            <label for="hobby-desc">Description:</label>
            <textarea
              class="form-input"
              id="hobby-desc"
              name="hobby-desc"
            ></textarea>
          </div>
          
            <!-- DROP DOWN MENU -->      
          <div class="form-group">
            <label for="hobby_cat">Select a Category:</label>
            <select
              id="hobby_cat"
              class="form-control"
              data-role="select-dropdown"
              data-profile="minimal"
            >
              <!-- options -->

              {{#each categories as |category|}}
                <option value={{category.id}}>
                  {{category.name}}
                </option>
              {{/each}}

            </select>
          </div>

          <div class="form-group">
            <button
              type="submit"
              class="btn btn-primary submit-hobby"
            >Create</button>
          </div>

        </form>

        <a href="/profile"><button
            class="btn"
            id="cancel-button"
          >Cancel</button></a>
      </div>
    </div>
  </div>
</div>

<script src="./js/newHobby.js"></script>
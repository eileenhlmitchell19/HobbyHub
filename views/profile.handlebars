{{!-- the logged-in user's page --}}
<div id="profilePage" class="row">
  {{!-- left side of html page --}}
  <div id="yourProfile" class="col-8">

    <div class="row">
      <div class="col-auto">
        <div id="titleCard">{{username}}'s Page</div>
      </div>
    </div>

    <div id="list-of-hobbies" class="col hobby-list">
      <h3 class="mt-4">My Hobbies:</h3>
      {{#each hobbies as |hobby|}}
        <div class="row mb-2">
          <div class="col">
            <h4><a href="/hobby/{{hobby.id}}">{{hobby.name}} {{hobby.category.name}}</a></h4>

          </div>
          <div class="col">
            <button
              id="deleteBtn"
              class="btn btn-sm btn-danger delete-button"
              data-id="{{hobby.id}}"
            >DELETE HOBBY</button>
          </div>
        </div>
      {{/each}}
    </div>

  </div>


  <div id="rightSideColumn" class="col">
    <button id="newHobbyButton" class="col btn btn-primary">Add a new hobby!</button>




    <div id="list-of-hobbies" class="col hobby-list">
      <h3 class="mt-4">People with Similar Hobbies:</h3>
      {{#each users_list as |user|}}
        <div class="row mb-2">
          <div class="col">
            <h4><a href="/users/{{user.id}}">{{user.username}}</a></h4>
          </div>
        </div>
      {{/each}}
    </div>


  </div>

</div>

<script src="./js/profile.js"></script>